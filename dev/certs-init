#!/bin/bash

cd "$(dirname "${BASH_SOURCE[0]}")" || exit

export TLSGEN_OUT=".data/certificates"
export TLSGEN_FORCE="false"

mkdir -p "$TLSGEN_OUT"

## Root CA
tg cert --name "ca-root" \
	--is-ca \
	--pass "password" \
	--common-name "A3S Root CA"

## Intermediate CA
tg cert \
	--name "ca-intermediate" \
	--is-ca \
	--pass "password" \
	--common-name "A3S Intermediate CA" \
	--signing-cert "$TLSGEN_OUT/ca-root-cert.pem" \
	--signing-cert-key "$TLSGEN_OUT/ca-root-key.pem" \
	--signing-cert-key-pass "password"

cat \
	"$TLSGEN_OUT/ca-intermediate-cert.pem" \
	"$TLSGEN_OUT/ca-root-cert.pem" \
	>"$TLSGEN_OUT/ca-chain.pem"

## Service https cert
tg cert \
	--name "a3s" \
	--pass "password" \
	--auth-server \
	--common-name "a3s" \
	--dns "localhost" \
	--ip "127.0.0.1" \
	--signing-cert "$TLSGEN_OUT/ca-intermediate-cert.pem" \
	--signing-cert-key "$TLSGEN_OUT/ca-intermediate-key.pem" \
	--signing-cert-key-pass "password"

## JWT signing cert
tg cert \
	--name "jwt" \
	--pass "password" \
	--common-name "jwt" \
	--signing-cert "$TLSGEN_OUT/ca-intermediate-cert.pem" \
	--signing-cert-key "$TLSGEN_OUT/ca-intermediate-key.pem" \
	--signing-cert-key-pass "password"

tg cert \
	--name "jwt-alt" \
	--pass "password" \
	--common-name "jwt-alt" \
	--signing-cert "$TLSGEN_OUT/ca-intermediate-cert.pem" \
	--signing-cert-key "$TLSGEN_OUT/ca-intermediate-key.pem" \
	--signing-cert-key-pass "password"

## Test User Cert CA and Cert
tg cert \
	--name "ca-acme" \
	--is-ca \
	--pass "password" \
	--common-name "ACME CA"

tg cert \
	--name "user" \
	--auth-client \
	--common-name "Jean-Michel" \
	--signing-cert "$TLSGEN_OUT/ca-acme-cert.pem" \
	--signing-cert-key "$TLSGEN_OUT/ca-acme-key.pem" \
	--signing-cert-key-pass "password"

## Platform CA
# This CA is used to issue server certificates for internal services
# as well as validating service's client certificates against
# the internal Platform MTLS source.
tg cert \
	--name "ca-platform-internal" \
	--is-ca \
	--pass "password" \
	--common-name "Platform"
