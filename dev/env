#!/bin/bash

export A3S_LISTEN="0.0.0.0:44443"
export A3S_CORS_DEFAULT_ORIGIN="https://127.0.0.1:44443"
export A3S_CORS_ADDITIONAL_ORIGINS="http://localhost:8080"
export A3S_LOG_FORMAT="console"
export A3S_LOG_LEVEL="info"
export A3S_MONGO_URL="mongodb://localhost:37017"
export A3S_MONGO_AUTH_DB="admin"
export A3S_MONGO_USER="a3s"
export A3S_MONGO_PASS="a3s"
export A3S_MONGO_TLS_DISABLE="true"
export A3S_MONGO_ENCRYPTION_KEY="1234567890ABCDEF"
export A3S_HEALTH_LISTEN="0.0.0.0:64012"
export A3S_HEALTH_ENABLED="true"
export A3S_ENCODING="msgpack"
export A3S_PROFILING_ENABLED="true"
export A3S_PROFILING_LISTEN="0.0.0.0:63012"
# export A3S_NATS_URL="nats://localhost:4223" # uncomment to use an external nats server
export A3S_NATS_USER="nats-user"
export A3S_NATS_PASS="nats-password"
export A3S_NATS_TLS_DISABLE="true"
export A3S_TLS_CERT="dev/.data/certificates/a3s-cert.pem"
export A3S_TLS_KEY="dev/.data/certificates/a3s-key.pem"
export A3S_TLS_KEY_PASS="password"
export A3S_JWT_CERT="dev/.data/certificates/jwt-cert.pem"
export A3S_JWT_KEY="dev/.data/certificates/jwt-key.pem"
export A3S_JWT_KEY_PASS="password"
export A3S_JWT_ISSUER="https://127.0.0.1:44443"
export A3S_JWT_AUDIENCE="https://127.0.0.1:44443"
